<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_most_popular_video_item_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_most_popular_video_item_thumbnail"
            android:layout_width="220dp"
            android:layout_height="130dp"
            android:scaleType="fitXY"
            android:src="#8F8F8F" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_most_popular_video_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="영상 제목"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cv_most_popular_video_item_thumbnail"
        app:layout_constraintStart_toStartOf="@+id/cv_most_popular_video_item_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/cv_most_popular_video_item_thumbnail" />
</androidx.constraintlayout.widget.ConstraintLayout>